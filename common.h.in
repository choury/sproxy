uint32_t getmtime();

#define  LOGD(mod, ...)  \
do{\
    if(debug & mod) {\
        char tmp[1024]; \
        snprintf(tmp, sizeof(tmp), __VA_ARGS__); \
        slog(LOG_DEBUG, "%05u:%s: %s", getmtime()%100000, mod##_STR, tmp); \
    }\
}while(0)


